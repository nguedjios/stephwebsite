@model IEnumerable<nankamApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Nankam Web App</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vorname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobtitel)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Abteilung)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Foto)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jobtitel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abteilung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>